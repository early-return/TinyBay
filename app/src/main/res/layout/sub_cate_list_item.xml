<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/sub_cate_list_item_button_radius"
    android:layout_marginStart="@dimen/sub_cate_list_item_button_margin"
    android:layout_marginEnd="@dimen/sub_cate_list_item_button_margin"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sub_cate_button"
        android:text="Test"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingStart="@dimen/sub_cate_list_item_button_horizontal_padding"
        android:paddingEnd="@dimen/sub_cate_list_item_button_horizontal_padding"
        android:paddingTop="@dimen/sub_cate_list_item_button_vertical_padding"
        android:paddingBottom="@dimen/sub_cate_list_item_button_vertical_padding"
        android:textSize="@dimen/sub_cate_list_font_size"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minWidth="100dp"
        />

</android.support.v7.widget.CardView>